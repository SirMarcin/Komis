@model Samochod

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Marka" src="@Model.ZdjecieUrl" style="max-width:100%;"/>
            </div>
            <div class="col-md-6">
                <h3>@Model.Marka - @Model.Model</h3>
                <h4>@Model.Pojemnosc</h4>
                <h4>@Model.Cena</h4>
                <h4>@Model.Przebieg</h4>
                <h4>@Model.RokProdukcji</h4>
                <h4>@Model.RodzajPaliwa</h4>
                <p>@Model.Opis</p>
                <h2 class="text-danger">Czy napewno chcesz usunąć ?</h2>
                <div class="float-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Usuń" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-success">Powrót</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
