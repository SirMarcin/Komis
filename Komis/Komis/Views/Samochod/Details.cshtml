@model Samochod

<div>
    <div class="thumbnail">
        <div class="row">
            <div class="col-md-6">
                <img alt="@Model.Marka" src="@Model.ZdjecieUrl" width="500"/>
            </div>    
            <div class="col-md-3">
                <h3>@Model.Marka - @Model.Model</h3>
                <h4>@Model.Cena</h4>
                <h4>@Model.RokProdukcji</h4>
                <h4>@Model.Przebieg</h4>
                <h4>@Model.Pojemnosc</h4>
                <h4>@Model.Moc</h4>
                <h4>@Model.Opis</h4>
            </div>
            <div class="col-md-3" style="padding-right:50px;">
                <h3 class="float-md-right">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edycja</a>
                    <a asp-action="Index" class="btn btn-success">Powrót</a>
                </h3>
            </div>
        </div>
    </div>
</div>
